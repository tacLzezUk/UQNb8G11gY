{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": [
      ".pnpm-store/*",
      "**/.next/**",
      "**/.expo/**",
      "**/dist/**",
      "**/artifacts/**",
      "**/node_modules/**",
      "**/.git/**",
      "**/cache/**",
      ".openzeppelin",
      "typechain-types",
      "generated.ts",
      "expo-env.d.ts"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "useKeyWithClickEvents": "off",
        "useMediaCaption": "off"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      },
      "correctness": {
        "noUnusedVariables": "error",
        "useExhaustiveDependencies": "off",
        "noUnusedImports": {
          "fix": "safe",
          "level": "error"
        }
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noAssignInExpressions": "off",
        "noArrayIndexKey": "off"
      },
      "complexity": {
        "noForEach": "warn",
        "useLiteralKeys": "off"
      },
      "style": {
        "noNegationElse": "error"
      },
      "nursery": {
        "noDuplicatedFields": "error",
        "useSortedClasses": {
          "fix": "safe",
          "level": "error",
          "options": {}
        }
      }
    }
  },
  "javascript": {
    "formatter": {
      "trailingCommas": "none"
    }
  },
  "formatter": {
    "indentStyle": "space"
  }
}
